<% include ../partials/header %>

<h1 class="cs-form-header">Edit <%= topic.title %></h1>
<div class="cs-form-container">
	<form action="/topics/<%= topic._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="topic[title]" placeholder="title" value="<%= topic.title %>">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="topic[description]" placeholder="description" value="<%= topic.description %>">
		</div>
		<button class="btn btn-primary btn-block">Submit</button>
	</form>
</div>

<% include ../partials/footer %>