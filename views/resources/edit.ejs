<% include ../partials/header %>

<h1 class="cs-form-header">Update Resource for <%= topic.title %></h1>
<div class="cs-form-container">
	<form action="/topics/<%= topic._id %>/resources/<%= resource._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="resource[title]" placeholder="title" value="<%= resource.title %>">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="resource[description]" placeholder="description" value="<%= resource.description %>">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="resource[resourceLink]" placeholder="resource link" value="<%= resource.resourceLink %>">
		</div>
		<button class="btn btn-primary btn-block">Submit</button>
	</form>
</div>

<% include ../partials/footer %>