<% include partials/header %>

<div class="row">
	<div class="col-md-6 mb-5">
		<h1 class="display-3">CodeSurf</h1>
		<p class="lead">A web application designed to allow users to share and discuss software related resources.</p>
		<hr class="my-4">
		<a class="btn btn-md btn-primary" href="/topics">View Topics</a>
	</div>
	<div class="col-md-6">
		<h2 class="cs-form-header">Sign Up</h2>
		<div class="cs-form-container-landing">
			<form action="/register" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="firstName" placeholder="first name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="lastName" placeholder="last name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="username">
				</div>
				<div class="form-group">
					<input class="form-control" type="password" name="password" placeholder="password">
				</div>
				<button class="btn btn-primary btn-block">Sign Up</button>
			</form>
		</div>
	</div>
</div>

<% include partials/footer %>